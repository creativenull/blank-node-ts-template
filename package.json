{
  "name": "blank-node-ts-template",
  "version": "1.0.0",
  "description": "My way of creating a blank node project with typescript",
  "main": "dist/index.js",
  "author": "Arnold Chand <chand.arnold@hotmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p .",
    "dev": "concurrently -n NODE,ESLINT \"yarn dev:node\" \"yarn dev:lint\"",
    "dev:lint": "esw -w --ext .ts src",
    "dev:node": "nodemon --ext ts,json src/index.ts",
    "start": "node $npm_package_main"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-watch": "^7.0.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {}
}
